<#-- @ftlvariable name="" type="com.yammer.<%= service_name %>.service.views.<%= model.cap_first %>NewView" -->
<#setting number_format="computer">
<#include "../header.ftl"/>
<div class="page-header">
<h1>New <%= model.en.camel_case_to_english.cap_first %></h1>
</div>

<form accept-charset="UTF-8" action="/networks/${networkId?string}/<%= model_plural %>" id="new_<%= model %>" class="well" method="post">
<% attrs.each_pair do |k, v| %>
  <div class="field">
    <label for="<%= k %>"><%= k.en.camel_case_to_english.cap_first %></label>
    <% case v
       when "boolean" %>
    <input id="<%= k %>" name="<%= k %>" type="checkbox" value="true"/>
    <% when "LocalDate" %>
    <div class="input-append date" id="dp_<%= k %>" data-date="2012-08-02" data-date-format="yyyy-mm-dd">
      <input id="<%= k %>" name="<%= k %>" size="30" type="text"/>
      <span class="add-on"><i class="icon-th"></i></span>
    </div>
    <script>
      $(function () {
        $('#dp_<%= k %>').datepicker();
      });
    </script>
    <%  else %>
    <input id="<%= k %>" name="<%= k %>" size="30" type="text" />
    <% end %>
  </div>
<% end %>
  <div class="actions">
    <input name="commit" type="submit" class="btn btn-small btn-success" value="Create <%= model.en.camel_case_to_english.cap_first %>" />
  </div>
</form>

<a href="/networks/${networkId?string}/<%= model_plural %>" class="btn">Back</a>
<#include "../footer.ftl"/>
